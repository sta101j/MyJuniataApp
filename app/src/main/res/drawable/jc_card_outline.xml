<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Card Background -->
    <solid android:color="@android:color/white" />

    <!-- Gold Border -->
    <stroke
        android:width="2dp"
        android:color="@color/jc_gold" />

    <!-- Rounded Corners -->
    <corners android:radius="18dp" />

    <!-- Inner Padding -->
