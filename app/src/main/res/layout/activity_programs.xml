<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jc_light_bg">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/jc_blue">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            android:tint="@color/jc_gold"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Programs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/jc_gold" />
    </RelativeLayout>

    <!-- IMAGE -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/all_programs_campus"
        android:contentDescription="Programs" />

    <!-- ACTION ICON ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- CALL -->
        <LinearLayout
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_call"
                android:tint="@color/jc_gold"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- EMAIL -->
        <LinearLayout
            android:id="@+id/btnEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:tint="@color/jc_gold"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- DIRECTIONS -->
        <LinearLayout
            android:id="@+id/btnDirections"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_directions"
                android:tint="@color/jc_gold"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Directions"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- WEBSITE -->
        <LinearLayout
            android:id="@+id/btnWebsite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_web"
                android:tint="@color/jc_gold"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- INFO CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@drawable/jc_card_outline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Programs Overview"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/jc_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="A top 100 liberal arts and sciences college, Juniata College prepares students not only to adapt to change, but to lead it. Students from all over the world seek out Juniata College for its exceptionally strong academic programs in the sciences, business, arts, and humanities. Juniata College provides each student with two faculty advisors who guide students with a personalized, interdisciplinary approach to education."
                    android:textColor="@color/jc_blue" />
            </LinearLayout>

            <!-- 2 HORIZONTAL BLOCKS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp">

                <!-- Undergraduate -->
                <LinearLayout
                    android:id="@+id/btnUndergraduate"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/jc_card_outline"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Undergraduate"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/jc_blue" />
                </LinearLayout>

                <!-- Graduate -->
                <LinearLayout
                    android:id="@+id/btnGraduate"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/jc_card_outline"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Graduate"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/jc_blue" />
                </LinearLayout>
            </LinearLayout>

            <!-- CONTACT INFO CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@drawable/jc_card_outline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Juniata College"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/jc_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="1700 Moore Street\nHuntingdon, PA 16652"
                    android:textColor="@color/jc_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Phone: (877) 586-4282"
                    android:textColor="@color/jc_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Email: info@juniata.edu"
                    android:textColor="@color/jc_blue" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
