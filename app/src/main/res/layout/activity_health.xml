<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/jc_light_bg">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/jc_blue">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            android:tint="@color/jc_gold"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health / Wellness"
            android:textSize="20sp"
            android:textColor="@color/jc_gold"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD 1: KENNEDY -->
            <LinearLayout
                android:id="@+id/cardKennedy"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/jc_card_outline"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kennedy Sports &amp; Recreation Center"
                    android:textColor="@color/jc_blue"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- CARD 2: GLAESER -->
            <LinearLayout
                android:id="@+id/cardGlaeser"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/jc_card_outline"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Glaeser Counseling Services"
                    android:textColor="@color/jc_blue"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- CARD 3: BROAD TOP -->
            <LinearLayout
                android:id="@+id/cardBroadTop"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/jc_card_outline"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Broad Top Family Wellness Center"
                    android:textColor="@color/jc_blue"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- CARD 4: ATHLETICS -->
            <LinearLayout
                android:id="@+id/cardAthletics"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/jc_card_outline"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Athletics &amp; Recreation"
                    android:textColor="@color/jc_blue"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
