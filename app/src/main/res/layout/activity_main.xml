<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ===================== -->
    <!-- WELCOME / SPLASH SCREEN -->
    <!-- ===================== -->
    <LinearLayout
        android:id="@+id/welcomeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/jc_blue">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/juniata_logo"
            app:tint="@color/jc_gold" />

        <TextView
            android:layout_marginTop="16dp"
            android:text="Welcome to Student Services"
            android:textColor="@color/jc_gold"
            android:textSize="18sp"
            android:textStyle="bold"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>
    </LinearLayout>

    <!-- ===================== -->
    <!-- HOME SCREEN -->
    <!-- ===================== -->
    <LinearLayout
        android:id="@+id/homeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/jc_light_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TOP BAR -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/jc_blue">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <!-- JUNIATA BANNER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STUDENT SERVICES"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:textColor="@color/jc_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CENTER"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:textColor="@color/jc_blue" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgJuniataLogo"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/juniata_logo"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <!-- SEARCH BAR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/jc_search_bg"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/search_left"
                        android:tint="#888888"
                        tools:ignore="UseAppTint" />

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Buildings, Services..."
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingStart="8dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- ROW 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/btnStudentServices"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/jc_card_outline">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_graduate"
                            android:tint="@color/jc_gold"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Services"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/jc_blue"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnFindBuildings"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/jc_card_outline">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_apartment"
                            android:tint="@color/jc_gold"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Find Buildings"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/jc_blue"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ROW 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/btnAcademics"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/jc_card_outline">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/baseline_menu_book_24"
                            android:tint="@color/jc_gold"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Academics"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/jc_blue"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnCareers"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/jc_card_outline">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_career"
                            android:tint="@color/jc_gold"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Careers"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/jc_blue"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ROW 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/btnDiversity"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/jc_card_outline">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_world"
                            android:tint="@color/jc_gold"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diversity"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/jc_blue"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnFood"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/jc_card_outline">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_local_pizza"
                            android:tint="@color/jc_gold"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/jc_blue"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ROW 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/btnAccessibility"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/jc_card_outline">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_disable_sign"
                            android:tint="@color/jc_gold"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accessibility"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/jc_blue"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnFleetBooking"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/jc_card_outline">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_airport_shuttle"
                            android:tint="@color/jc_gold"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fleet Booking"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/jc_blue"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ROW 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:id="@+id/btnHealth"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/jc_card_outline">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_heart"
                            android:tint="@color/jc_gold"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Health / Wellness"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/jc_blue"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnFinances"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/jc_card_outline">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_accounting"
                            android:tint="@color/jc_gold"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Finances"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/jc_blue"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
