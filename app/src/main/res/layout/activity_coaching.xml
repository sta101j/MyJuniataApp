<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jc_light_bg">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/jc_blue">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            android:tint="@color/jc_gold"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Academic Coaching"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/jc_gold" />
    </RelativeLayout>

    <!-- IMAGE -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coaching_learning"
        android:contentDescription="Academic Coaching" />

    <!-- ACTION ICON ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- CALL -->
        <LinearLayout
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_call"
                android:tint="@color/jc_gold" />

            <TextView
                android:text="Call"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>

        <!-- EMAIL -->
        <LinearLayout
            android:id="@+id/btnEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:tint="@color/jc_gold" />

            <TextView
                android:text="Email"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- DIRECTIONS -->
        <LinearLayout
            android:id="@+id/btnDirections"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_directions"
                android:tint="@color/jc_gold" />

            <TextView
                android:text="Directions"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- WEBSITE -->
        <LinearLayout
            android:id="@+id/btnWebsite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_web"
                android:tint="@color/jc_gold" />

            <TextView
                android:text="Website"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- INFO CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:background="@drawable/jc_card_outline"
                android:orientation="vertical">

                <TextView
                    android:text="Brian Baker"
                    android:textStyle="bold"
                    android:textColor="@color/jc_blue"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:text="Academic Resource Coordinator\nStatton Learning Commons\n(814) 641-3078\nbakerb@juniata.edu"
                    android:textColor="@color/jc_blue"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:text="Isabella Klug"
                    android:textStyle="bold"
                    android:textColor="@color/jc_blue"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:text="Academic Resource Coordinator\nStatton Learning Commons\n(814) 641-3150\nklugi@juniata.edu"
                    android:textColor="@color/jc_blue"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>

            <!-- ACADEMIC RESOURCES -->
            <LinearLayout
                android:id="@+id/btnSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@drawable/jc_card_outline">

                <TextView
                    android:text="Academic Resources"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/jc_blue"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:text="Stop by Academic Resources in the Statton Learning Commons to learn more. Drop-ins are welcome! Appointments are preferred!"
                    android:textColor="@color/jc_blue"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:text="Schedule Here"
                    android:textStyle="bold"
                    android:textColor="@color/jc_gold"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
