<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jc_light_bg">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/jc_blue">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            android:tint="@color/jc_gold"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="International &amp; Multicultural Affairs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/jc_gold" />
    </RelativeLayout>

    <!-- IMAGE -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/multicultural_center"
        android:contentDescription="International &amp; Multicultural Affairs" />

    <!-- ACTION ICON ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- CALL -->
        <LinearLayout
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_call"
                android:tint="@color/jc_gold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- EMAIL -->
        <LinearLayout
            android:id="@+id/btnEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:tint="@color/jc_gold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- DIRECTIONS -->
        <LinearLayout
            android:id="@+id/btnDirections"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_directions"
                android:tint="@color/jc_gold"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Directions"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>


        <!-- WEBSITE -->
        <LinearLayout
            android:id="@+id/btnWebsite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_web"
                android:tint="@color/jc_gold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textSize="12sp"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- INFO CARD -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/jc_card_outline">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Administrative Staff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/jc_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jamie Weaver\nDean of International Education\n207 Oller Center\n814-641-3182\nweaverj@juniata.edu"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shya Erdman\nDirector of International Student &amp; Scholar Services\nOller Center\n814-641-5331\nsme100@juniata.edu"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelsey Lane\nAdministrative Assistant\nOller Center\n814-641-3180\nktl100@juniata.edu"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Associated Staff"
                android:textStyle="bold"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jessica Martin\nDirector of Language in Motion\n814-641-3493\nmartinj@juniata.edu"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textStyle="bold"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Students: studcie@juniata.edu\nStudy Abroad: studyabroad@juniata.edu\nInternational &amp; Domestic Inquiries: international@juniata.edu"
                android:textColor="@color/jc_blue"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
