<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="100dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/jc_card_button"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iconFinances"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/juniata_logo"
        android:tint="@color/jc_gold"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/textFinances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finances"
        android:textColor="@color/jc_blue"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="6dp" />

</LinearLayout>
